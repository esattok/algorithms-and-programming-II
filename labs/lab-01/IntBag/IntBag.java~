/**
 * The class that contains a number of integers in it
 * @author Esad TÃ¶k
 * @version 15.02.2020
 */
public class IntBag
{
   // Properties
   private int[] bag;
   private int[] valid;
   
   // Constructures
   public Intbag()
   {
      this.bag = new int[100];
      this.valid = 0;
   }
   
   public Intbag( int number )
   {
      this.bag = new int[nunmber];
      this.valid = 0;
   }
   
   // Methods
   public void add( int value )
   {
      bag[valid] = value;
      valid++;
   }
   
   public void add( int value, int index )
   {
      valid++;
      for ( int i = (valid - 1); i > index; i-- )
      {
         bag[i] = bag[i-1];
      }
      bag[index] = value;
   }
   
   public void remove( int index )
   {
      for ( int i = (index + 1); i < valid; i++ )
      {
         bag[ i - 1 ] = bag[i];
      }
      valid--;
   }
   
   public boolean contains( int value )
   {
      for (int i = 0; i < valid; i++)
      {
         if (bag[i] == value)
         {
            return true;
         }
      }
      return false;
   }
   
   public int size()
   {
      return valid;
   }
   
   public int getValue( int index )
   {
      return bag[index];
   }
   
   public String toString()
   {
      String result;
      result = "";
      
      result = result + "[ ";
      for ( int i = 0; i < valid; i++ )
      {
         if ( i > 0 )
         {
            result = result + ", ";
         }
         result = result + bag[i];
      }
      result = result + " ]";
      return result;
   }
}

